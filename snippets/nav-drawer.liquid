<!-- /snippets/nav-drawer.liquid -->

<div id="NavDrawer" class="drawer drawer--left">
  <div class="drawer__header">
        <div class="drawer__close js-drawer-close">
      <button type="button" class="icon-fallback-text">
        <span class="custom-icon-x" aria-hidden="true"></span>
      </button>
    </div>
  </div>

  <!-- Mobile Navigation -->
  <ul class="mobile-nav">
    <li class = "mobile-nav__item">
      {% if settings.show_multiple_currencies %}
        {% include 'currency-picker' %}
      {% endif %}
    </li>
    {% for link in linklists.main-menu.links %}
      {%- comment %}<locksmith:4c4e>{% endcomment -%}
        {% include 'locksmith-variables', locksmith_scope: 'subject', locksmith_subject: link %}{% if locksmith_transparent %}{% else %}{% continue %}{% endif %}
      {%- comment %}</locksmith:4c4e>{% endcomment -%}
      {% assign child_list_handle = link.title | handleize %}
      {% if linklists[child_list_handle].links != blank %}
        <li class="mobile-nav__item{% if link.active %} mobile-nav__item--active{% endif %}" aria-haspopup="true">
          <div class="mobile-nav__has-sublist">
            <a href="{{ link.url }}" class="mobile-nav__link"><h3>{{ link.title }}</h3></a>
            <div class="mobile-nav__toggle">
              <button type="button" class="icon-fallback-text mobile-nav__toggle-open">
                <span class="icon icon-plus" aria-hidden="true"></span>
                <span class="fallback-text">See More</span>
              </button>
              <button type="button" class="icon-fallback-text mobile-nav__toggle-close">
                <span class="icon icon-minus" aria-hidden="true"></span>
                <span class="fallback-text">{{ 'cart.general.close_cart' | t | json }}</span>
              </button>
            </div>
          </div>
          <ul class="mobile-nav__sublist">
            {% for childlink in linklists[child_list_handle].links %}
              {%- comment %}<locksmith:2d13>{% endcomment -%}
                {% include 'locksmith-variables', locksmith_scope: 'subject', locksmith_subject: childlink %}{% if locksmith_transparent %}{% else %}{% continue %}{% endif %}
              {%- comment %}</locksmith:2d13>{% endcomment -%}
              <li class="mobile-nav__item {% if childlink.active %} mobile-nav__item--active{% endif %}">
                <a href="{{ childlink.url }}" class="mobile-nav__link" ><h5>{{ childlink.title | escape }}</h5></a>
              </li>
            {% endfor %}
          </ul>
        </li>
      {% else %}
        <li class="mobile-nav__item{% if link.active %} mobile-nav__item--active{% endif %}">
          <a href="{{ link.url }}" class="mobile-nav__link" ><h3>{{ link.title }}</h3></a>
        </li>
      {% endif %}
    {% endfor %}
    {% comment %}
      If customer accounts are enabled, provide login and create account links
    {% endcomment %}
    {% if shop.customer_accounts_enabled %}
      {% if customer %}
        <li class="mobile-nav__item">
          <a class = "mobile-nav__link" href="/account"><h3>{{ 'layout.customer.my_account' | t }}</h3></a>
        </li>
        <li class="mobile-nav__item">
          <a class = "mobile-nav__link" href="/account/logout"><h3>{{ 'layout.customer.log_out' | t }}</h3></a>
        </li>
      {% else %}
        <li class="mobile-nav__item">
          <a class = "mobile-nav__link" href="/account/login"><h3>{{ 'layout.customer.log_in' | t }}</h3></a>
        </li>
        {% if shop.customer_accounts_optional %}
        <li class="mobile-nav__item">
          <a class = "mobile-nav__link" href="/account/register"><h3>{{ 'layout.customer.create_account' | t }}</h3></a>
        </li>
        {% endif %}
      {% endif %}
    {% endif %}
  </ul>
</div>
